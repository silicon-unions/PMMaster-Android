<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".practices.ui.activities.PracticesDownloadActivity">

    <ImageView
        android:id="@+id/floatingLogo"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_pmp_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.app.progresviews.ProgressLine
        android:id="@+id/progress_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:layout_weight="0.9"
        app:definition="Please wait while updating the application data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:lineBarWidth="7dp"
        app:lineDefTextSize="13sp"
        app:lineProgressColor="#43bd9f"
        app:underLineColor="@color/white"
        app:value="0%"
        app:valueDefTextSize="20dp"
        app:valuePercentage="0" />

</android.support.constraint.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This is the places of question here the question will be here ...multiple line " />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/bluey_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_question" />

        <View
            android:id="@+id/answer_view_one"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/bluey_grey"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/view_answer_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_answer_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            app:layout_constraintBottom_toTopOf="@id/view_answer_one"
            tools:text="Answer 1 onesdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdas" />

        <ImageView
            android:id="@+id/iv_answer_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:foregroundGravity="center"
            android:src="@drawable/infoicon"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/view_answer_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_answer_one"
            app:layout_constraintTop_toTopOf="@+id/view5" />
        <View
            android:id="@+id/view_answer_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/bluey_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_answer_one"
            app:layout_constraintBottom_toTopOf="@id/tv_answer_two"
            />

        <View
            android:id="@+id/answer_view_two"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/bluey_grey"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/view_answer_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_one"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_answer_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_one"
            app:layout_constraintBottom_toTopOf="@id/view_answer_two"
            tools:text="Answer 2 onesdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdas"/>

        <ImageView
            android:id="@+id/iv_answer_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/infoicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_one"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@id/view_answer_two"
            app:layout_constraintRight_toLeftOf="@id/tv_answer_two"
            android:visibility="gone"/>
        <View
            android:id="@+id/view_answer_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/bluey_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_answer_two"
            app:layout_constraintBottom_toTopOf="@id/tv_answer_three"/>

        <View
            android:id="@+id/answer_view_three"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/bluey_grey"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/view_answer_three"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_two"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_answer_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_two"
            app:layout_constraintBottom_toTopOf="@id/view_answer_three"
            tools:text="Answer 3 onesdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdas"
            />

        <ImageView
            android:id="@+id/iv_answer_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/infoicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_two"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@id/view_answer_three"
            app:layout_constraintRight_toLeftOf="@id/tv_answer_three"
            android:visibility="gone"
            />

        <View
            android:id="@+id/view_answer_three"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/bluey_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_answer_three"
            app:layout_constraintBottom_toTopOf="@id/tv_answer_four" />

        <View
            android:id="@+id/answer_view_four"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/bluey_grey"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/view_answer_four"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_three"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_answer_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_three"
            app:layout_constraintBottom_toTopOf="@id/view_answer_four"
            tools:text="Answer 4 onesdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdas"/>

        <ImageView
            android:id="@+id/iv_answer_four"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/infoicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_answer_three"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@id/view_answer_four"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@id/tv_answer_four"
            />

        <View
            android:id="@+id/view_answer_four"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/bluey_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_answer_four"
             />
    </android.support.constraint.ConstraintLayout>

</ScrollView>
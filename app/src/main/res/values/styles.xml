<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenAppTheme" parent="FullScreenAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="ClassActivityTheme" parent="AppTheme"></style>

    <style name="GreenyBlueToolbarTheme">
        <item name="titleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">@color/greenyBlue</item>
    </style>

    <style name="WhiteBlackToolbarTheme">
        <item name="titleTextColor">@android:color/black</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:color">@color/yellow</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="default_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="default_margin_style">
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/empty_white_rectangle</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="back_button_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="title_style" parent="default_margin_style">
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="description_style" parent="default_margin_style">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textColor">@color/blueGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddNewCardNameFragmentStyle" parent="AppTheme">

    </style>

    <style name="AddNewCardDetailsFragmentStyle" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/blueGrey</item>
    </style>

    <style name="NewCardActivityTheme" parent="AppTheme"></style>

    <style name="EditCardActivityTheme" parent="AppTheme"></style>

    <style name="TextStyle4">
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/greeny_blue</item>
    </style>

    <style name="TextStyle5">
        <item name="android:gravity">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greeny_blue</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextStyle_Custom" parent="TextStyle">
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/greeny_blue</item>
    </style>


    <style name="Title6Black">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
    </style>


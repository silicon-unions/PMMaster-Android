        <!--should not add  items in  this class mainly uses-->
    </style>

    <style name="BaseTextStyles.TextStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextStyle2" parent="BaseTextStyles.TextStyle2"></style>

    <style name="TextStyle6">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="TextStyle7">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="BaseTextStyles.BntGreen">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/greeny_blue</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="BaseTextStyles.BtnBlack">
